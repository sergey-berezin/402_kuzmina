<Window x:Class="ImageRecognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageRecognition"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Choose Folder" Click="ChoosingFolder" Grid.Column="0" Margin="5,5,5,5"/>
            <Button Name="StartButton" Content="Start Recognition" Click="BeginRecognizing" Grid.Column="1" Margin="5,5,5,5"/>
            <Button Name="CancelButton" Content="Cancel" Click="CancelRecognition" Grid.Column="3" Margin="5,5,5,5"/>
        </Grid>
        
        <ListBox Grid.Row="1" Name="imagesBox">
            
        </ListBox>
    </Grid>
</Window>
